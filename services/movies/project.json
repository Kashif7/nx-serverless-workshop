{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "movies",
  "projectType": "application",
  "sourceRoot": "services/movies",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/movies",
        "color": true,
        "command": "sls package"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/movies",
        "color": true,
        "command": "sls offline start"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/movies",
        "color": true,
        "command": "serverless deploy --verbose"
      },
      "dependsOn": [
        {
          "target": "deploy",
          "projects": "dependencies"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["services/movies/**/*.ts"]
      }
    },
    "typeCheck": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/movies",
        "color": true,
        "command": "tsc --project tsconfig.lib.json --noEmit"
      }
    }
  },
  "tags": ["service"]
}
