{
  "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",

  "projectType": "application",

  "sourceRoot": "services/books",

  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",

      "options": {
        "cwd": "services/books",

        "color": true,

        "command": "sls package"
      }
    },

    "serve": {
      "executor": "@nrwl/workspace:run-commands",

      "options": {
        "cwd": "services/books",

        "color": true,

        "command": "sls offline start --stage local"
      }
    },

    "deploy": {
      "executor": "@nrwl/workspace:run-commands",

      "options": {
        "cwd": "services/books",

        "color": true,

        "command": "serverless deploy --verbose"
      },

      "dependsOn": [
        {
          "target": "deploy",

          "projects": "dependencies"
        }
      ]
    },

    "lint": {
      "executor": "@nrwl/linter:eslint",

      "outputs": ["{options.outputFile}"],

      "options": {
        "lintFilePatterns": ["services/auth/**/*.ts"]
      }
    },

    "typeCheck": {
      "executor": "@nrwl/workspace:run-commands",

      "options": {
        "cwd": "services/books",

        "color": true,

        "command": "tsc --project tsconfig.lib.json --noEmit"
      }
    }
  },

  "tags": ["service"]
}
